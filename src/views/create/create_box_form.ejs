<!-- Metadados da pagina -->
<%- include("../partials/head" )%>

  <body>
    <%- include("../partials/header") %>

      <main class="container-fluid">
        <section class="container-fluid container-sm mt-6">

          <p class="text-light text-center h1 mb-5">Criar Caixa</p>
          <div class="content-form-create">

            <form action="/create/box" method="POST">
              <div class="input-group input-group mb-3 placeholder-wave">

                <label for="date" class="input-group-text inputGroup-sizing-default" autofocus>
                  Data de Modificação:</label>
                <input type="date" id="data" name="dateModify" value="<%= currentDate %>" required autofocus
                  class="form-control form-control-sm p-2 text-primary-emphasis bg-dark-subtle border border-primary
                  opacity-75"
                  aria-label="Sizing text input" aria-describedby="inputGroup-sizing-sm">
              </div>

              <div class="input-group input-group mb-3 placeholder-wave">
                <label for="name" class="input-group-text inputGroup-sizing-default">Nome Descritivo:
                </label>
                <input id="name" name="nameDescription" value="crispin-fusão-adicionada" required autofocus
                  placeholder=""
                  class="form-control form-control-sm p-2 text-primary-emphasis bg-dark-subtle border border-primary
                  opacity-75"
                  aria-label="Sizing text input" aria-describedby="inputGroup-sizing-sm">
              </div>

              <div class="input-group input-group mb-3 placeholder-wave">
                <label for="locale" class="input-group-text inputGroup-sizing-default">Localização:
                </label>
                <input type="text" id="locale" name="locale" value="Prox. praça da goiaba" required autofocus
                  placeholder=""
                  class="form-control form-control-sm p-2 text-primary-emphasis bg-dark-subtle border border-primary
                  opacity-75"
                  aria-label="Sizing text input" aria-describedby="inputGroup-sizing-sm">
              </div>

              <div class="input-group input-group mb-3 placeholder-wave">
                <label for="descricao" class="input-group-text inputGroup-sizing-default">Active CTO:
                </label>
                <input type="number" id="descricao" name="activeCto" required autofocus
                  class="form-control form-control-sm p-2 text-primary-emphasis bg-dark-subtle border border-primary
                  opacity-75"
                  aria-label="Sizing text input" aria-describedby="inputGroup-sizing-sm">
              </div>

              <div class="input-group input-group mb-3 placeholder-wave">
                <label for="networkTechnology" class="input-group-text inputGroup-sizing-default">Tecnologia de Rede:
                </label>
                <input type="text" id="networkTechnology" name="networkTechnology" value="Epon" required autofocus 
                placeholder=""
                  class="form-control form-control-sm p-2 text-primary-emphasis bg-dark-subtle border border-primary
                  opacity-75"
                  aria-label="Sizing text input" aria-describedby="inputGroup-sizing-sm">
              </div>

              <div class="input-group input-group mb-3 container-btn">
                <button type="submit" class="btn btn btn-outline-light text-uppercase
                btn-content">Criar</button>
              </div>
            </form>

          </div>
        </section>

      </main>
      <!-- Footer da pagina -->
      <%- include("../partials/footer") %>
  </body>

  </html>